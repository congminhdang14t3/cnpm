<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linear_splash"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/logo"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/text_version"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/version"
                android:textColor="@android:color/black"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/text_copy_right"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copy_right"
                android:textColor="@android:color/black"/>
        </LinearLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:id="@+id/linear_main_activity"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:gravity="center">
          <TextView
              android:id="@+id/text_want_to_buy"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="20dp"
              android:gravity="center"
              android:textColor="@android:color/white"
              android:text="@string/text_ask_buy"
              android:background="@drawable/background_text_custom"/>
          <TextView
              android:id="@+id/text_not_remember_drug"
              android:layout_margin="20dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textColor="@android:color/white"
              android:text="@string/text_not_remember_drug"
              android:background="@drawable/background_text_custom"/>
      </LinearLayout>
      <com.nightonke.boommenu.BoomMenuButton
          android:id="@+id/boom_menu"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_alignParentBottom="true"
          app:bmb_buttonEnum="textOutsideCircle"
          app:bmb_piecePlaceEnum="piecePlace_dot_6_1"
          app:bmb_buttonPlaceEnum="buttonPlace_sc_6_1"
          app:bmb_normalColor="@color/colorPrimary"/>
  </RelativeLayout>

</LinearLayout>